<?xml version="1.0" encoding="utf-8"?>
<template
    name="Screen"
    description="Creates a new Arkitekt Activity, ViewModel, ViewModelFactory and Layout"
    format="4"
    minApi="19"
    minBuildApi="19"
    revision="1">

    <category value="Arkitekt Activity"/>
    <formfactor value="Mobile"/>

    <parameter
        name="Activity Name"
        constraints="class|unique|nonempty"
        default=""
        help="The name of the activity class to create"
        id="className"
        type="string"/>

    <parameter name="UseCase type"
        default="coroutines" id="useCaseType"
        type="enum">
        <option id="coroutines">Coroutines</option>
        <option id="rx">RxJava</option>
    </parameter>

    <globals file="globals.xml.ftl"/>
    <execute file="recipe.xml.ftl"/>

</template>
